{
  "name": "backend-express-with-mongodb",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start-nodemon": "NODE_ENV=localhost nodemon dist/server.js",
    "tsc": "tsc -p src",
    "test": "nyc --reporter=html --reporter=text mocha -r ts-node/register test/*.spec.ts",
    "coverage": "nyc --reporter=html --reporter=text-lcov > coverage.lcov mocha -r ts-node/register test/*.spec.ts",
    "express": "npm run coverage & npm run tsc",
    "fortify": "npm run tsc",
    "build": "npm run tsc",
    "webpack:local": "NODE_ENV=localhost webpack",
    "webpack:prod": "NODE_ENV=prod webpack",
    "start:prod": "node provider-enrollment/bundle.js",
    "start": "concurrently --kill-others \"npm run watch-ts\"",
    "watch-ts": "tsc-watch -w -p src --onSuccess \"npm run start-nodemon\"",
    "debug": "nodemon --inspect ./bin/www"
  },
  "author": "Anandharajan",
  "license": "ISC",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "test/**/*.ts",
      "src/config/**/*.ts",
      "src/api/model/**/*.ts",
      "src/api/router/**/*.ts",
      "src/api/schema/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/helmet": "0.0.44",
    "@types/passport": "^1.0.1",
    "aws-sdk": "^2.374.0",
    "body-parser": "^1.17.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^3.1.3",
    "handlebars": "^4.0.12",
    "helmet": "^3.21.1",
    "jsdoc": "^3.4.3",
    "mongoose": "^5.7.3",
    "nodemailer": "^4.7.0",
    "path": "^0.12.7",
    "pg": "^6.1.5",
    "webpack": "4.39.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mongodb": "^3.3.5",
    "concurrently": "^3.5.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "express-session": "^1.15.6",
    "googleapis": "^67.0.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.19.3",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.10.0",
    "typescript": "3.5.1",
    "window": "^4.2.5"
  }
}
