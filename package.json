{
  "name": "appengine-typescript",
  "description": "An example TypeScript app running on Google App Engine.",
  "version": "0.0.1",
  "private": true,
  "license": "Apache Version 2.0",
  "author": "Google Inc.",
  "engines": {
    "node": "16.x.x"
  },
  "scripts": {
    "prepare": "npm run gcp-build",
    "pretest": "npm run gcp-build",
    "test": "c8 mocha -p -j 2 test/*.test.js --exit",
    "lint": "gts lint",
    "deploy": "gcloud app deploy",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "build": "tsc -p .",
    "gcp-build": "tsc -p .",
    "start": "node ./dist/server.js",
    "start-local": "concurrently --kill-others \"npm run watch-ts\"",
    "watch-ts": "tsc-watch -w -p . --onSuccess \"npm run start-nodemon\"",
    "start-nodemon": "NODE_ENV=localhost nodemon ./dist/server.js"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "mongoose": "^8.1.0",
    "nodemon": "^3.0.3",
    "tsc-watch": "^6.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.19.8",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "compression": "^1.7.4",
    "dotenv": "^16.4.1",
    "gts": "^5.0.0",
    "helmet": "^7.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.0",
    "wait-port": "^1.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "test/**/*.ts",
      "src/config/**/*.ts",
      "src/api/model/**/*.ts",
      "src/api/router/**/*.ts",
      "src/api/schema/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
